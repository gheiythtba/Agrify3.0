{% extends 'base.html.twig' %}

{% block title %}AnimalStock index{% endblock %}

{% block body %}
    <h1>AnimalStock index</h1>

    <table class="table" ,border=1>
        <thead>
            <tr>
                <th>Id</th>
                <th>NomAnimal</th>
                <th>SexeAnimal</th>
                <th>AgeAnimal</th>
                <th>PoidsAnimal</th>
                <th>Health</th>
                <th>DateEntreeStock</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal_stock in animal_stocks %}
            <tr>
                <td>{{ animal_stock.id }}</td>
                <td>{{ animal_stock.nomAnimal }}</td>
                <td>{{ animal_stock.sexeAnimal }}</td>
                <td>{{ animal_stock.ageAnimal }}</td>
                <td>{{ animal_stock.poidsAnimal }}</td>
                <td>{{ animal_stock.health }}</td>
                <td>{{ animal_stock.dateEntreeStock ? animal_stock.dateEntreeStock|date('Y-m-d') : '' }}</td>
                <td>{{ animal_stock.prix }}</td>
                <td>
                    <a href="{{ path('app_animal_stock_show', {'id': animal_stock.id}) }}">show</a>
                    <a href="{{ path('app_animal_stock_edit', {'id': animal_stock.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_animal_stock_new') }}">Create new</a>
{% endblock %}
