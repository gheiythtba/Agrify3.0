{% extends 'base.html.twig' %}

{% block title %}Create new Materiel{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/Back/CSS/Menu.CSS') }}">
{% endblock %}

{% block body %}
    <div class="main-container">
        <div class="form-container">

            <h1 class="title">Create new Materiel</h1>


            <form method="post" action="{{ path('app_materiel_new') }}" class="materiel-form">
                {{ form_start(form) }}

                <div class="form-field">
                    {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form.type, {'attr': {'class': 'form-error'}}) }}
                </div>
                <div class="image-container">
                    <img src="{{ asset('images/truck.png') }}" alt="Image 1" class="image" width="50">
                    <img src="{{asset('/images/storage.png')}}" alt="Image 2" class="image" width="50">
                    <img src="{{ asset('/images/tool.png') }}" alt="Image 3" class="image" width="50">
                </div>
                <div class="form-field">
                    {{ form_label(form.etat, 'Etat', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.etat, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form.etat, {'attr': {'class': 'form-error'}}) }}
                </div>

                <div class="form-field">
                    {{ form_label(form.capacite_masse, 'Capacité Masse', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.capacite_masse, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form.capacite_masse, {'attr': {'class': 'form-error'}}) }}
                </div>

                <div class="form-field">
                    {{ form_label(form.capacite_volume, 'Capacité Volume', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.capacite_volume, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form.capacite_volume, {'attr': {'class': 'form-error'}}) }}
                </div>

                <div class="form-field">
                    {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form.prix, {'attr': {'class': 'form-error'}}) }}
                </div>

                <button type="submit" class="form-submit">Submit</button>

                {{ form_end(form) }}
            </form>


            <a href="{{ path('app_materiel_index') }}" class="back-link">Back to List</a>



        </div>
    </div>
{% endblock %}
