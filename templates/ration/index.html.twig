{% extends 'AnimalManagement.html.twig' %}

{% block section %}{% endblock %}
{% block title %}Ration index{% endblock %}
{% block ingredient %}{% endblock %}
{% block animal %}{% endblock %}
{% block newBorn %}{% endblock %}
{% block nutritionalneeds %}{% endblock %}
{% block gestation %}{% endblock %}


{% block body %}
<!-- ##### search ##### -->
<section class="subscribe-newsletter-area">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-12 col-lg-5">
                <!-- Section Heading -->
            </div>
            <div class="col-12 col-lg-6">
                <div class="subscribe-form">
                    <form method="get">
                        <input type="text" name="search" placeholder="rechercher">
                        <button type="submit" class="btn alazea-btn">chercher</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### search##### -->
<!-- ##### Sorting ##### -->
<div>
    <a href="{{ path('app_ration_index', {'search': app.request.query.get('search'), 'sort': 'asc'}) }}" class="navbar-brand mx-4 mb-3 btn alazea-btn active">Sort A-Z</a>
    <a href="{{ path('app_ration_index', {'search': app.request.query.get('search'), 'sort': 'desc'}) }}" class="navbar-brand mx-4 mb-3 btn alazea-btn active">Sort Z-A</a>
</div>
<!-- ##### Sorting ##### -->
    <h1>Ration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Espece</th>
                <th>Statut</th>
                <th>Sexe</th>
                <th>Poids Minimal</th>
                <th>Poids Maximal</th>
                <th>Bute Production</th>
                <th>show</th>
                <th>edit</th>
            </tr>
        </thead>
        <tbody>
        {% for ration in rations %}
            <tr>
                <td>{{ ration.especeRation }}</td>
                <td>{{ ration.statutRation }}</td>
                <td>{{ ration.sexeRation }}</td>
                <td>{{ ration.poidsMinRation }}</td>
                <td>{{ ration.poidsMaxRation }}</td>
                <td>{{ ration.buteProductionRation }}</td>
                <td>
                    <a href="{{ path('app_ration_show', {'id': ration.id}) }}">show</a>
                    </td>
                    <td>
                    <a href="{{ path('app_ration_edit', {'id': ration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ration_new') }}" class="btn alazea-btn active">Create new</a>
{% endblock %}
