{% extends 'base.html.twig' %}

{% block title %}New Reclamation{% endblock %}
{% block stylesheets  %}
{{ parent() }}

   <style>
       h1 {
           color: #1D741B;
           text-align: center;
       }
       .radio-group {
           display: flex;
           justify-content: space-between;
       }


       .radio-group label {
           flex: 1;
           margin-right: 10px;
       }
       a {
           color: #377120;
           text-decoration: none;
           display: block;
           text-align: center;
       }

       a:hover {
           text-decoration: underline;
       }

       form {
           max-width: 500px;
           margin: 0 auto;
           padding: 20px;
           background-color: #F2F0D5;
           border: 1px solid #ddd;
           border-radius: 5px;
           box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
       }
       label {
           display: block;
           margin-bottom: 8px;
           color: #555;

       }

       input,
       select,
       textarea {
           width: 100%;
           padding: 8px;
           margin-bottom: 10px;
           box-sizing: border-box;
           border: 1px solid #ccc;
           border-radius: 4px;



       }

       button {
           background-color: #377120;
           color: #fff;
           padding: 10px 20px;
           border: none;
           border-radius: 5px;
           cursor: pointer;
           justify-content: center;
       }

       button:hover {
           background-color: #285e15;
       }
   </style>
{% endblock stylesheets  %}
{% block body %}
    <h1>Create new Reclamation</h1>
    {{ include('reclamation/_form.html.twig') }}
    <a href="{{ path('app_reclamation_index') }}">back to list</a>
{% endblock %}
