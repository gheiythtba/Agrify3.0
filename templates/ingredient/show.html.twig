{% extends 'AnimalManagement.html.twig' %}

{% block title %}Ingredient{% endblock %}
{% block section %}{% endblock %}
{% block animal %}{% endblock %}
{% block newBorn %}{% endblock %}
{% block nutritionalneeds %}{% endblock %}
{% block ration %}{% endblock %}
{% block gestation %}{% endblock %}

{% block body %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ ingredient.nameIngredient }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ ingredient.itemQuantityIngredient }}</td>
            </tr>
            <tr>
                <th>Unit</th>
                <td>{{ ingredient.unitIngredient }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ ingredient.costIngredient }}</td>
            </tr>
            <tr>
                <th>Loaded By</th>
                <td>{{ ingredient.loadedByIngredient }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ingredient.descriptionIngredient }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ ingredient.typeIngredient }}</td>
            </tr>
            <tr>
                <th>Nutriment Principal</th>
                <td>{{ ingredient.nutrimentPrincipalIngredient ? ingredient.nutrimentPrincipalIngredient|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ingredient_index') }}" class="btn alazea-btn active">back to list</a>

    <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}" class="btn alazea-btn active">edit</a>

    {{ include('ingredient/_delete_form.html.twig') }}
{% endblock %}
