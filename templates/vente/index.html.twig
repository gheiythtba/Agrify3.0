{% extends 'baseAdmin.html.twig' %}

{% block title %} Vente {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        h1 {
            font-size:3em; 
            margin-top:20px;
            font-weight: 300;
            line-height:1em;
            text-align: center;
            color: #2E5D42;
          }

        table {
            width: 80%; /* Adjust the width as needed */
            margin: 50px auto;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
            font-size: 14px;
        }

        th {
            background-color: #377120;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #000;

        }
        .container td:first-child { color: #000; }


        tr:nth-child(even) {
            background-color: #F4F7F0;
        }

        a {
            color: #2E5D42;
            text-decoration: none;
            margin-right: 10px;
            transition: color 0.3s ease-in-out;
        }

        a:hover {
            color: #22C738;
            text-decoration: underline;
        }

        .no-records {
            color: #757575;
            font-style: italic;
        }

        .button {
            text-align: center;
            margin-top: 20px;

        }

        .create-new {
            display: inline-block;
            padding: 12px 20px;
            background-color: #2E5D42;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            transition: background-color 0.3s ease-in-out;
        }
      
        .create-new:hover {
            background-color: #D8FFDB;
            text-decoration: none;
            color: #000;
        }
        /* Styles pour le paginator */
.pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}

.pagination .pagination-list {
    display: flex;
    list-style: none;
    padding: 0;
}

.pagination .pagination-item {
    margin: 0 5px;
}

.pagination .pagination-link {
    display: block;
    padding: 8px 12px;
    text-decoration: none;
    color: #333;
    background-color: #e0e0e0;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.pagination .pagination-link:hover {
    background-color: #ddd;
}

.pagination .pagination-item.active .pagination-link {
    background-color: #2E5D42;
    color: #fff;
}

/* Styles pour les flèches "Précédent" et "Suivant" */
.pagination .pagination-prev,
.pagination .pagination-next {
    margin: 0 5px;
}

.pagination .pagination-prev,
.pagination .pagination-next,
.pagination .pagination-link {
    cursor: pointer;
}

/* Style pour la flèche "Précédent" */
.pagination .pagination-prev {
    font-weight: bold;
}

/* Style pour la flèche "Suivant" */
.pagination .pagination-next {
    font-weight: bold;
}

    </style>
{% endblock %}

{% block body %}
    <h1> Vente </h1>
<div class="tab-container">
    <table class="container">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cathégorie</th>
                <th>Nom</th>
                <th>Quantité à vendre</th>
                <th>Prix Total</th>
                <th>Date Vente</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vente in ventes %}
            <tr>
                <td>{{ vente.id }}</td>
                <td>{{ vente.category }}</td>
                <td>{{ vente.nom }}</td>
                <td>{{ vente.quantiteV}}</td>
                <td>{{ vente.prixTotal }}</td>
                <td>{{ vente.dateVente  ? vente.dateVente|date('Y-m-d') : '' }}</td>

                <td>
                    <a href="{{ path('app_vente_show', {'id': vente.id}) }}">Show</a>
                    <a href="{{ path('app_vente_edit', {'id': vente.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune vente effectuée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   </div> 

    <a href="{{ path('app_vente_new') }}">Ajouter</a>
{% endblock %}
