{% extends 'AnimalManagement.html.twig' %}

{% block title %}Newborns index{% endblock %}
{% block section %}{% endblock %}
{% block ingredient %}{% endblock %}
{% block animal %}{% endblock %}
{% block animalbatch %}{% endblock %}
{% block nutritionalneeds %}{% endblock %}
{% block ration %}{% endblock %}
{% block body %}
    <h1>Newborns index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Sexe</th>
                <th>DateNaissance</th>
                <th>Espece</th>
                <th>Poids</th>
                 <th>show</th>
                <th>edit</th>
            </tr>
        </thead>
        <tbody>
        {% for newborn in newborns %}
            <tr>
                <td>{{ newborn.sexe }}</td>
                <td>{{ newborn.dateNaissance ? newborn.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ newborn.espece }}</td>
                <td>{{ newborn.poids }}</td>
                <td>
                    <a href="{{ path('app_newborns_show', {'id': newborn.id}) }}">show</a>
                    <td>
                    <td>
                    <a href="{{ path('app_newborns_edit', {'id': newborn.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_newborns_new') }}" class="btn alazea-btn active">Create new</a>
{% endblock %}
