{% extends 'Veterinaire.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        h1 {
            color: #1D741B;
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 80%;
            margin: 0 auto;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
            font-size: 14px;
        }

        th {
            background-color: #88CA5E;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        tr:nth-child(even) {
            background-color: #F4F7F0;
        }

        a {
            color: #2E5D42;
            text-decoration: none;
            margin-right: 10px;
            transition: color 0.3s ease-in-out;
        }

        a:hover {
            color: #22C738;
            text-decoration: underline;
        }



        .button {
            text-align: center;
            margin-top: 20px;
            margin-bottom: 30px;

        }

        .create-new {
            display: inline-block;
            padding: 12px 20px;
            background-color: #1D741B;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            transition: background-color 0.3s ease-in-out;
        }

        .create-new:hover {
            background-color: #22C738;
            color: #000;

        }
        .pagination-container {
            justify-content: center;
            margin-top: 20px; /* Adjust margin as needed */
            display: block;
        }

        .input-small {
            width: 50px; /* Set your preferred width */
            margin-bottom: 30px;
        }
        .input-group {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 10vh; /* Adjust as needed */
        }

    </style>
{% endblock %}
{% block title %}Maladie index{% endblock %}


{% block body %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $("#search").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("table tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<h1>List des traitement</h1>


    <div class="input-group">
        <div class="form-outline" data-mdb-input-init>
            <input type="text" id="search" class="form-control input-small" placeholder="Search">

        </div>

    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AnimalId</th>
                <th>Medicament</th>
                <th>TypeDeTraitement</th>
                <th>Dosage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for maladie in maladies %}
            <tr>
                <td>{{ maladie.id }}</td>
                <td>{{ maladie.animalId }}</td>
                <td>{{ maladie.medicament }}</td>
                <td>{{ maladie.typeDeTraitement }}</td>
                <td>{{ maladie.dosage }}</td>
                <td>
                    <a href="{{ path('app_maladie_show', {'id': maladie.id}) }}">show</a>
                    <a href="{{ path('app_maladie_edit', {'id': maladie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="button">
    <a href="{{ path('app_maladie_new') }}" class="create-new">Create new</a>


</div>



    <div class="d-flex justify-content-center">
        {% do maladies.SetPageRange(2) %}
        {{ knp_pagination_render(maladies, "pagination.html.twig") }}
    </div>
{% endblock %}
