{% extends 'base.html.twig' %}

{% block title %}Maintenance index{% endblock %}

{% block body %}
    <h1>Maintenance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>MaterielType</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for maintenance in maintenances %}
            <tr>
                <td>{{ maintenance.id }}</td>
                <td>{{ maintenance.materielType }}</td>
                <td>{{ maintenance.dateDebut ? maintenance.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ maintenance.dateFin ? maintenance.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ maintenance.description }}</td>
                <td>
                    <a href="{{ path('app_maintenance_show', {'id': maintenance.id}) }}">show</a>
                    <a href="{{ path('app_maintenance_edit', {'id': maintenance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_maintenance_new') }}">Create new</a>
{% endblock %}
