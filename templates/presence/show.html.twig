{% extends 'base.html.twig' %}

{% block title %}Presence{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        h1 {
            color: #2E5D42;
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
            font-size: 14px;
        }

        th {
            background-color: #F2F0D5;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        a {
            color: #2E5D42;
            text-decoration: none;
            margin-right: 10px;
            transition: color 0.3s ease-in-out;
        }

        a:hover {
            color: #22C738;
            text-decoration: underline;
        }

        .button {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            background-color: #2E5D42;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-right: 10px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #22C738;
            color: #000;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Presence Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Presence ID</th>
                <td>{{ presence.idP }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ presence.date ? presence.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Presence State</th>
                <td>{{ presence.presenceState }}</td>
            </tr>
        </tbody>
    </table>

    <div class="button">
        <a href="{{ path('app_presence_index') }}" class="btn">Back to List</a>
        <a href="{{ path('app_presence_edit', {'id_p': presence.idP}) }}" class="btn">Edit Presence</a>
        {{ include('presence/_delete_form.html.twig') }}
    </div>
{% endblock %}
