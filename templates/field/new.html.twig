{% extends 'baseAdmin.html.twig' %}

{% block title %}New Field{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        h1 {
            color: #377120;
            text-align: center;
            font-size: 3em;
            margin-top: 10px;
            font-weight: 300;
            line-height: 1em;
        }

        form {
            max-width: 600px;
            margin: 20px auto;
            padding: 40px;
            background-color: #F2F2F2;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #377120;
            font-weight: bold;
        }

        input,
        select,
        textarea {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }

        table {
            width: 80%;
            margin: 50px auto;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
            font-size: 14px;
        }

        th {
            background-color: #377120;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #F2F0D5;
        }

        a {
            color: #377120;
            text-decoration: none;
            margin-right: 10px;
            transition: color 0.3s ease-in-out;
        }

        a:hover {
            text-decoration: underline;
            color: #285e15;
        }

        .create-new-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .create-new {
            display: inline-block;
            padding: 12px 30px;
            background-color: #377120;
            color: #fff;
            text-decoration: none;
            text-align: center;
            transition: background-color 0.3s ease-in-out;
            margin-bottom:30px;
        }

        .create-new:hover {
            text-decoration: none;
            background-color: #0CF25D;
        color: #000;
        }



    .btn1 {
        display: inline-block;
        padding: 10px 50px;
        background-color: #377120;
        color: #fff;
        text-decoration: none;
        text-align: center;
        transition: background-color 0.3s ease-in-out;
    }

    .btn1:hover {
        background-color: #0CF25D;
        color: #000;
    }



    </style>
{% endblock %}

{% block body %}
    <h1>Create New Field</h1>

    {{ include('field/_form.html.twig') }}
    <div class="create-new-container">

    <a href="{{ path('app_field_index') }}" class="create-new">Back to List</a>
</div>
{% endblock %}
